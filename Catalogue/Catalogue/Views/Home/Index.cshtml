@model IEnumerable<Catalogue.Models.Catalogue>

@{
    ViewBag.Title = "Information Catalogue";
}

<h3>Welcome @ViewBag.Username!</h3>

<div class="col">
    <div class="col-md-4">
        <h2>Catalogues</h2>
        @Html.ActionLink("Create Catalogue", "Create", "Catalogues")

        @foreach (var item in Model)
        {
            <div class="table-bordered">
                <div>@Html.ActionLink(" Edit", "Edit", "Catalogues", new { id = item.CataID }, null) @Html.DisplayFor(modelItem => item.Title) @Html.ActionLink("Create Item", "CataItemCreate", "CatalogueItems", new { cataID = item.CataID }, null)</div>
                <div>
                @foreach (var cataItems in item.CatalogueItems)
                {
                    <div>@Html.ActionLink(" Edit", "Edit", "CatalogueItems", new { id = cataItems.ItemID }, null) @Html.DisplayFor(cataItem => cataItems.Title)</div><br/>
                }
                </div>
            </div>
        }
    </div>
</div>



<div class="col">
    <div class="col-lg-4">
        <h2>Your Content Here...</h2>
    </div>
</div>
